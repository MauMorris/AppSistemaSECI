        	x:Name="rubricaTextBox_VDieta" 
        	HorizontalAlignment="Left"
        	Height="26"
        	Margin="106,408,0,0" 
        	TextWrapping="Wrap" 
        	Text=""
        	TextElement.FontSize="12"
        	VerticalAlignment="Top" 
        	Width="30"
        	HorizontalContentAlignment="Left" 
        	TabIndex="6"
        	MaxLength="2"
        	DataObject.Pasting="PegarTexto"
