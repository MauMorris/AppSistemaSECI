        	HorizontalAlignment="Left" 
        	Margin="10,226,0,0" 
        	VerticalAlignment="Top" 
        	Width="81" Height="38" Grid.Column="2"/>
        <Label 
        	x:Name="almuerzoLabel_VDieta" 
        	Content="Almuerzo" 
        	HorizontalContentAlignment="Right"
        	TextElement.FontSize="14"
        	HorizontalAlignment="Left" 
        	Margin="10,258,0,0" 
