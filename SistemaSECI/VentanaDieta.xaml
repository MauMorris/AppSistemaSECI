        	TextWrapping="Wrap" 
        	Text=""
            TextElement.FontSize="12"
        	VerticalAlignment="Top" 
        	Width="465"
        	HorizontalContentAlignment="Left"
        	TabIndex="5"
        	MaxLength="70"
        	DataObject.Pasting="PegarTexto"
